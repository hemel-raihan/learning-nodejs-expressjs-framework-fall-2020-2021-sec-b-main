<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload File</title>
    <link rel="stylesheet" href="/assets/styles/student/fileupload.css">
</head>
<body>
    <div class="content">
        <div class="container">
            <% if(typeof alert != 'undefined'){ %>
                <% alert.forEach(function(error){ %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= error.msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
        
               <% }) %>
           <% } %>
        </div>

        <div class="form">
      
        <h4>Add File</h4>
        <form name="myForm" method="post" enctype="multipart/form-data">
        
        <font color="green"> <p> Photo Title :</p><input type="text" id="title" name="title"></font>
       
      
       <font color="green"> <p> Upload Photo :</p><input type="file" id="photo" name="file"></font>
        
       <font color="green"> <p> photo description :</p><input type="text" id="description" name="description"></font>
       <input type="hidden" name="id" value="<%=data[0].uid%>">
       
        <input type="submit" value="upload">
       </form>
       <a class="btn btn-primary" href="showgellarypic.php" role="button">View Photo</a>
       </div>
       
       </div>

       <script>

        var my_form = document.forms.myForm;

        my_form.onsubmit = function(){
            var title = document.getElementById("title").value;
              var photo = document.getElementById("photo").value;
              var description = document.getElementById("description").value;
              
              if (title == "" || photo == "" || description == "") {
                alert("every form must be filled out");
                return false;
              }
              
        };

    
    </script>
</body>
</html>